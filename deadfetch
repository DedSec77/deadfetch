#!/usr/bin/env python3
import cpuinfo
from colorama import Fore
import platform
import psutil
import os
import distro
import acs
from osinfo import Variables
acsiiart = ""



reset = Fore.RESET
def infoCollect():
    if Variables.distr.lower() == "fedora":
        acsiiart = acs.fedora
        color = Fore.CYAN
    elif "windows" in platform.system().lower():
        acsiiart = acs.windows
        color = Fore.RED
        Variables.distr = ""
    elif "redhat" in Variables.distr.lower():
        acsiiart = acs.redhat
        color = Fore.RED
    elif "ubuntu" in Variables.distr.lower():
        acsiiart = acs.ubuntu
        color = Fore.YELLOW
    elif "debian" in Variables.distr.lower():
                acsiiart = acs.debian
                color = Fore.RED
    elif "arch" in Variables.distr.lower():
                acsiiart = acs.arch
                color = Fore.CYAN
    elif "gentoo" in Variables.distr.lower():
        acsiiart = acs.gentoo
        color = Fore.MAGENTA
    elif "macos" or "os x" in platform.system().lower():
        acsiiart = acs.apple
        color = Fore.GREEN
    elif "raspbian" in Variables.distr.lower():
        acsiiart = acs.raspberry
        color = Fore.RED

    def Prints():
        if "linux" in platform.system().lower():
                print(acsiiart, "\n")
                print(
            "           " + color + Variables.User + "@" + Variables.distr + reset +
            "\n            ---------" +
            color + "\nCPU: " + reset + Variables.CPU +
            color +"\nBit: " + reset + Variables.Bit +
            color +"\nSystem: " + reset + platform.system() +
            color +"\nDistro: " + reset +  Variables.distr +
            color +"\nShell: " + reset + Variables.shell +
            color +"\nRam: " + reset + Variables.ram +
            color +"\nWm: " + reset + Variables.GUI +
            color +"\nTerminal: " + reset + Variables.term
                )
        elif "windows" in platform.system().lower():
                print(
            acsiiart + "\n" +
            "           " + color + Variables.User + reset +
            "\n            ---------" +
            color + "\nCPU: " + reset + Variables.CPU +
            color +"\nBit: " + reset + Variables.Bit +
            color +"\nSystem: " + reset + platform.system() +
            color +"\nRam: " + reset + Variables.ram +
            color +"\nTerminal: " + reset + Variables.term
                )
        elif "os x" or "macos" or "mac os" in platform.system().lower():
                print(
            acsiiart + "\n" +
            "           " + color + Variables.User + "@" + platform.system() + reset +
            "\n            ---------" +
            color + "\nCPU: " + reset + Variables.CPU +
            color +"\nBit: " + reset + Variables.Bit +
            color +"\nSystem: " + reset + platform.system() +
            color +"\nShell: " + reset + Variables.shell +
            color +"\nRam: " + reset + Variables.ram +
            color +"\nTerminal: " + reset + Variables.term
                )

    Prints()

infoCollect()
